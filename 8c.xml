<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Reminder"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="16dp" />

    <EditText
        android:id="@+id/editTextMedicineName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Medicine Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextDosage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dosage"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Time"
        android:inputType="time" />

    <Button
        android:id="@+id/buttonUpdateReminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Reminder"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonDeleteReminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Reminder"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/holo_red_dark" />
</LinearLayout>
